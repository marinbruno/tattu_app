<% content_for(:navbar_class, "navbar-home") %>

<div class="banner">
  <div class="banner-content">
    <h1>Find your ideal tattoo. Seamlessly.</h1>
    <p>Search for the one that best matches your personality.</p>
    <div class= "search">
      <%= form_tag tattoos_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        size: 25,
        class: "input-xxlarge",
        placeholder: "Find a tattoo"%>
      <% end %>
    </div>
  </div>
</div>
