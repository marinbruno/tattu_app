<div class="container ">
  <div class="col-12 mt-3">
    <div class="p-2 d-flex flex-wrap mb-3 shadow">
      <div>
        <% unless @artist.photo.nil? %>
          <%= cl_image_tag @artist.photo.photo, height: 200, width: 200, crop: "fill", class: "avatar shadow" %>
        <% end %>
      </div>
      <div class="ml-3">
        <div>
          <h1><%= @artist.name %></h1>
          <p><% unless @artist.business_email.nil? %>
                <%= image_tag "mail.png" %>
                <%= @artist.business_email %>
              <% end %>
              <form id="contact_form" action="contact/<%= @artist.id %>" method="post" enctype="text/plain">
                <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                <input type="submit" value="Contact the artist" class="btn btn-secondary">
              </form>
              <%= link_to "https://www.instagram.com/#{@artist.instagram_username}/?hl=pt-br" do %>
                @<%= @artist.instagram_username %><
              <% end %></p>
          <p> <strong>Description</strong><br>
          <%= @artist.description %>
        </p>
        </div>
      </div>
    </div>

     <div class="mt-3 shadow">
      <div
        id="map"
        style="width: 100%;
        height: 150px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    </div>

    <div class="p-2">
      <h3 class="text-left ml-3">Portfolio</h3>
      <div class="tattoo-artist-cards">
        <div class="grid-col grid-col--1"></div>
        <div class="grid-col grid-col--2"></div>
        <div class="grid-col grid-col--3"></div>
        <% @artist.tattoos.each do |tattoo| %>
          <div class="tattoo-artist-relative">
            <div class="tattoo-card">
              <%= link_to cl_image_tag( tattoo.photo.photo, class:"tattoo-card-image"), tattoo_path(tattoo) %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <%= link_to 'Back', artists_path, class: 'mt-3 btn btn-secondary' %>
  </div>
</div>
