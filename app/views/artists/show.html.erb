<div class="container">
  <div class="col-12 mt-3">
    <div class="p-2 d-flex mb-3">
      <div>
        <% unless @artist.photo.nil? %>
          <%= cl_image_tag @artist.photo.photo, height: 200, width: 200, crop: "fill", class: "avatar" %>
        <% end %>
      </div>
      <div class="ml-3">
        <div>
          <h1><%= @artist.name %></h1>
          <p> <strong>Email:</strong> <%= @artist.user.email %> </p>
          <p> <strong>Description:</strong> <%= @artist.description %></p>
          <p> <strong>Instagram:</strong> <%= @artist.instagram_username %></p>
        </div>
      </div>
    </div>

    <div class=" p-2">
      <h3 class="text-left ml-3">Portfolio</h3>
      <div class="tattoo-cards">
        <% @artist.tattoos.each do |tattoo| %>
          <div>
            <%= link_to cl_image_tag( tattoo.photo.photo, height: 200, width: 200, crop: "fill",  class:"artist-tattoo-card"), tattoo_path(tattoo) %>
           <div class="artist-card-tags">
            <% tattoo.tags.each do |tag| %>
              <div class="tattoo-tag">
                <span class="<%= tag.css %>"><%= tag.name %></span>
              </div>
            <% end %>
          </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="mt-3 shadow">
      <div
        id="map"
        style="width: 100%;
        height: 300px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
      ></div>
    </div>


    <%= link_to 'Back', artists_path, class: 'mt-3 btn btn-secondary' %>
  </div>
</div>
