<%= link_to 'Back', :back, class: 'btn btn-secondary bkcbtn' %>
<div class="tattoo-show-container mt-3 mb-4">
  <div class="tattoo-show mb-3 flex-wrap">
    <div class="tattoo-display-container">
      <div class="tattoo-photo">
        <%= cl_image_tag @tattoo.image, height: 550, crop: :fill, class:"rounded tattoo-display tattoo-shadow" %>
      </div>
    </div>

    <div class="tattoo-related-infos ml-3">
      <div class="tattoo-artist-show mb-3">
        <div class="tattoo-artist-image">
          <%= link_to(artist_path(@tattoo.artist)) do %>
            <%= cl_image_tag @tattoo.artist_image, height: 80, width: 80, crop: :thumb, class:"avatar" %>
          <% end %>
        </div>

        <div class="name pl-2">
          <%= link_to(artist_path(@tattoo.artist), class:"btn") do %>
            <%= @tattoo.artist_name %>
          <% end %>
        </div>
      </div>

      <div class="tattoo-description mb-3">
        <p><%= @tattoo.description %></p>
      </div>

      <div class="tattoo-tags">
        <% @tattoo.tags.each do |tag| %>
          <div class="tattoo-tags-tag">
            <%= link_to tag_path(tag) do %>
              <span class="<%= tag.css %>"><%= tag.name %></span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="related-tattoos">
    <h5 class="related-tattoos-h5">Related tattoos:</h5>
  </div>
  <div class="d-flex justify-content-between">
    <% @relate_tattoos.each do |t| %>
      <div class="tattoo-display-container mt-2">
        <%= link_to tattoo_path(t) do %>
          <%= cl_image_tag t.image, height: 150, crop: :fill, class:"rounded tattoo-display" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

