
<div class="navbar navbar-expand-sm navbar-light navbar-lewagon <%= yield(:navbar_class) %> px-3 ">
  <div class="nav-logo-tattu">
    <div class="nav-logo">
      <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "tatu1.png", width: "40", height: "40" %>
      <% end %>
    </div>
    <div class="nav-tattu">
      <%= link_to root_path, class: "navbar-brand" do %>
        <h1 class="nav-tattu-h1">TATTU</h1>
      <% end %>
    </div>

  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>




  <div class="navbar-link-index">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">

        <div class="navbar-search">
          <%= form_tag tattoos_path, method: :get do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Find a tattoo"%>
          <% end %>
        </div>

        <li class="nav-item">
          <%= link_to "Tattoos", tattoos_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Artists", artists_path, class: "nav-link" %>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item dropdown">

            <%= cl_image_tag current_user.image ,class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false, height: "50", width: "50", crop: :thumb %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "My Profile", profile_path, class: "dropdown-item nav-link" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item nav-link" %>

            </div>
          </li>
        <% else %>
          <li class="nav-item">

            <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Register", new_user_registration_path, class: "nav-link" %>

          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

