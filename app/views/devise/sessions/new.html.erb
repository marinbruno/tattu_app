<div class="login-form-container">
  <div class="login-inputs-actions col-12 col-sm-4 p-0 my-3">
    <h2>Welcome back!</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="login-inputs p-0">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <%= render "devise/shared/password" %>

    <div class="login-actions mb-3">
      <%= f.button :submit, "Log in", class:"btn btn-dark btn-lg btn-block" %>
    </div>
    <% end %>

    <%= render "devise/shared/sign-up" %>
  </div>
</div>
